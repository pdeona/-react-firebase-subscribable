{
  "name": "react-firebase-subscribable",
  "version": "0.1.8",
  "main": "dist/index.js",
  "author": "Pedro De Ona <pedro@instantmd.co>",
  "license": "MIT",
  "repository": "github:pdeona/-react-firebase-subscribable",
  "description": "Higher Order Components to wrap a component in a firebase subscription",
  "keywords": [
    "firebase",
    "firestore",
    "auth",
    "real time",
    "subscriptions"
  ],
  "scripts": {
    "copy-flowtypes": "",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist",
    "postbuild": "./lib/copy-flowtypes",
    "deploy": "yarn build && yarn publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "cpx": "^1.5.0",
    "flow-bin": "^0.86.0",
    "jest": "^23.6.0",
    "jest-pnp-resolver": "^1.0.2",
    "react": "^16.6.3",
    "react-app-polyfill": "^0.1.3",
    "react-test-renderer": "^16.6.3",
    "rimraf": "^2.6.2"
  },
  "peerDependencies": {
    "react": "^16.6.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/(src|tests)/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  }
}
